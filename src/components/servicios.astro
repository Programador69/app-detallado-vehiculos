<style is:global >
    body {
        overflow-x: hidden;
    }

    .limpiezaInterior, .limpiezaExterior {
        display: block;
        margin: auto;
        border-radius: 15px;
        box-shadow: 0 0 6px #efe;
        margin-top: 30px;
        padding: 20px 10px;
        background-size: cover;
        position: relative;
        background-position: center center;
        color: #fff;
    }

    .malla {
        position: absolute;
        top: 0;
        left: 0;
        background-color: #000;
        width: 100%;
        height: 100%;
        opacity: 0.7;
        border-radius: 15px;
    }

    .limpiezaInterior h3, .limpiezaExterior h3 {
        font-size: 1.5em;
        margin-left: 30px;
        position: relative;
        z-index: 5;
    }

    .limpiezaInterior article, .limpiezaExterior article {
        display: flex;
        flex-direction: column;
        align-items: center;
        backdrop-filter: opacity(20px);
        position: relative;
        z-index: inherit;
    }

    .limpiezaInterior article p, .limpiezaExterior article p {
        padding: 0 20px;
        line-height: 1.5;
        font-weight: bold;
    }

    .limpiezaInterior article h4, .limpiezaExterior article h4 {
        font-size: 1.2em;
        align-self: self-start;
        margin-left: 30px;
        margin-bottom: 0;
    }

    .limpiezaInterior article ul li::marker, .limpiezaExterior article ul li::marker {
        color: #e01a29;
    }

    .limpiezaInterior article div, .limpiezaExterior article div {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .limpiezaInterior article div ul li, .limpiezaExterior article div ul li {
        font-size: 1.1em;
        margin: 10px 0;
    }

    .limpiezaInterior article div img, .limpiezaExterior article div img {
        width: 100%;
        height: 300px;
        border-radius: 15px;
        box-shadow: 0 0 15px #222;
    }

</style>